<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.travelguide.MainActivity">

        <ImageView
            android:id="@+id/main_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="@string/welcome_user"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="#50BDBDBD"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_content"
                android:textSize="15sp" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/attractions"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@id/content_container"
            android:layout_margin="10dp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="#F9A825"
            app:cardCornerRadius="2dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/attractions_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="110dp"
                android:text="Attractions"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/content_container"
            android:layout_margin="10dp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="#F9A825"
            app:cardCornerRadius="2dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/food_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="70dp"
                android:layout_marginTop="110dp"
                android:text="Food"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@id/attractions"
            android:layout_margin="10dp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="#F9A825"
            app:cardCornerRadius="2dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/rooms_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="110dp"
                android:text="Rooms"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/attractions"
            android:layout_margin="10dp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="#F9A825"
            app:cardCornerRadius="2dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/culture_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="110dp"
                android:text="Culture"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>